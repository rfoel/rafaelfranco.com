{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
